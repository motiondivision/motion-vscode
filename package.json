{
    "name": "motion-vscode-extension",
    "displayName": "Motion",
    "description": "Visual editor for Motion springs and easing curves, via GUI and AI.",
    "publisher": "motion",
    "version": "0.0.1",
    "homepage": "https://motion.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/motiondivision/motion-vscode"
    },
    "keywords": [
        "Framer Motion",
        "Motion",
        "Easing",
        "Springs",
        "Animation"
    ],
    "author": {
        "name": "Motion"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "AI"
    ],
    "icon": "images/logo.png",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "motion.mcp-servers",
                "label": "Motion"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run build",
        "compile": "yarn run check-types && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "build": "yarn run check-types && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile",
        "check-types": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.101.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.25.3",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
