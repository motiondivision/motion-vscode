{
    "name": "motion-vscode-extension",
    "displayName": "Motion",
    "description": "VS Code and Copilot enhancements for Motion, the animation library for JavaScript, React, and Vue.",
    "publisher": "motion",
    "version": "0.0.3",
    "homepage": "https://motion.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/motiondivision/motion-vscode"
    },
    "keywords": [
        "framer motion",
        "motion",
        "easing",
        "springs",
        "animation",
        "css generation",
        "css"
    ],
    "author": {
        "name": "Motion"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "AI"
    ],
    "icon": "images/logo.png",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "motion.mcp-servers",
                "label": "Motion"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "motion-activitybar",
                    "title": "Motion",
                    "icon": "images/logo.svg"
                }
            ]
        },
        "views": {
            "motion-activitybar": [
                {
                    "type": "webview",
                    "id": "motion-editor",
                    "name": "Motion"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "motion-editor",
                "contents": "Welcome to Motion! Select a bezier curve or spring to get started."
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run build",
        "compile": "yarn run check-types && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "build": "yarn run check-types && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile",
        "check-types": "tsc --noEmit",
        "new": "vsce package --no-yarn && vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.101.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.25.3",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.3"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
    "dependencies": {
        "node-fetch": "^2.7.0"
    }
}
